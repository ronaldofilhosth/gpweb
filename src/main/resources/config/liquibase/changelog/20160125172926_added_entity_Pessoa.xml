<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Pessoa.
    -->
    <changeSet id="20160125172926" author="jhipster">
        <createTable tableName="pessoa">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="id_pessoa" type="bigint"/>
            <column name="nm_pessoa" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="cd_tel" type="varchar(13)"/>
            <column name="cd_cel" type="varchar(13)"/>
            <column name="cd_fax" type="varchar(13)"/>
            <column name="nm_numero" type="varchar(255)"/>
            <column name="ds_complemento" type="varchar(255)"/>
            <column name="ds_situacao" type="bit"/>
            <column name="fl_fisica" type="bit"/>
            <column name="ds_email" type="varchar(255)"/>
            <column name="ds_obs" type="varchar(255)"/>
            <column name="ds_historico" type="varchar(255)"/>
            <column name="ds_inativo" type="bit"/>
            <column name="dt_cadastro" type="date"/>
            <column name="id_logradouro_id" type="bigint"/>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="id_logradouro_id"
                                 baseTableName="pessoa"
                                 constraintName="fk_pessoa_id_logra_id"
                                 referencedColumnNames="id"
                                 referencedTableName="logradouro"/>

    </changeSet>
</databaseChangeLog>
